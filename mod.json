{
  "Name": "CrystalClear",
  "Version": "2.2",
  "Enabled": true,
  "DLL": "CrystalClear.dll",
  
  // default: only Grain and Dithering off
  // values: 
  //  On = mod will force this setting to be turned on
  //  Ignore = mod will not modify this setting
  //  Off = mod will force this setting to be turned off
  // recommended:  all Ignore except ColorGrading, Taa, DepthofField, Fxaa and HDR
  
  "Settings": {
    // reduces clarity
    "Grain": "Off",
    
    // reduces clarity
    "Dithering": "Off",
    
    // darkens the edges of the scene
    "Vignette": "Ignore",
    
    // makes light sources overblown when enabled
    "Bloom": "Ignore",
    
    // make UI elements glow
    "UIBloom": "Ignore",
    
    // can fully disable
    "Shadows": "Ignore",
    
    // unsure if used.  it should appear as green/purple edge tinting
    "ChromaticAberration": "Ignore",
    
    // simulates pupil dilation response
    "EyeAdaptation": "Ignore",
    
    // setting to "Ignore" makes everywhere foggy
    "Fog": false,
    
    // unsure */
    "ColorGrading": "Ignore",
    
    // looks so good I wouldn't disable it
    "AmbientOcclusion": "Ignore",
    
    // temporal antialiasing aka MFAA - good fidelity
    "Taa": "Ignore",
    
    // stuff at different distances is focused differently (blurred)
    "DepthOfField": "Ignore",
    
    // almost-free anti-aliasing
    "Fxaa": "Ignore",
    
    // renderer is expecting this to be on but works without
    "HDR": "Ignore",
    
    // dirty UI */
    "Grunge": "Ignore",
    
    // scanline animation on UI
    "Scanlines": "Ignore"
  }
}


